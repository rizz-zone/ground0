{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "build/**"],
			"inputs": [
				"!vitest.config.ts",
				"**/*.ts",
				"**/*.js",
				"src/**",
				"!src/**/*.test.ts",
				"!coverage/**",
				"!dist/**"
			]
		},
		"test": {
			"dependsOn": ["@ground0/shared#build", "^test"],
			"outputs": ["coverage/**"]
		},
		"lint": {
			"dependsOn": ["@ground0/shared#build", "^lint"],
			"inputs": [
				"$TURBO_ROOT$/eslint.config.js",
				"**/*.ts",
				"**/*.js",
				"!coverage/**",
				"!dist/**"
			],
			"outputs": []
		},
		"test:watch": {
			"persistent": true,
			"cache": false
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"check-types": {
			"dependsOn": [
				"@ground0/shared#build",
				"@ground0/browser#build",
				"@ground0/durable-object#build",
				"ground0#build",
				"^check-types"
			],
			"outputs": []
		}
	}
}

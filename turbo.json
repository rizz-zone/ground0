{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"test": {
			"dependsOn": ["@ground0/shared#build", "^test"],
			"outputs": ["coverage/**"]
		},
		"lint": {
			"dependsOn": ["@ground0/shared#build", "^lint"],
			"inputs": ["$TURBO_ROOT$/eslint.config.js"],
			"outputs": []
		},
		"test:watch": {
			"persistent": true,
			"cache": false
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"check-types": {
			"dependsOn": ["@ground0/shared#build", "^check-types"],
			"outputs": []
		}
	}
}
